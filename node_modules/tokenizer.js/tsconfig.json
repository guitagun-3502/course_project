{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "dist/declarations",
        "removeComments": false,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "outDir": "dist/",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node",
            "jasmine"
        ]
    },
    "exclude": [
        "dist/**/*",
        "node_modules",
        "test/**/*"
    ],
    "include": [
        "src/",
        "test"
    ]
}